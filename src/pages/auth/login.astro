---
import Layout from "../../layouts/Layout.astro";
import { Navbar } from "../../components/Navbar.jsx";
import { Footer } from "../../components/Footer.jsx";
import "../../styles/Theme.css";
import "../../styles/Diagonals.css";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const email = data.get("email");
    const password = data.get("workspace");
    
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout title="Albgott">
  <Navbar client:load />
  <div class="w-full flex justify-center pt-10">
    <div
      class="w-full md:w-[900px] xl:w-[1000px] flex flex-col justify-start items-center pt-16 md:pt-20 lg:pt-24 text-center min-h-screen gap-10"
    >
      <div
        class="text-3xl sm:text-3xl lg:text-4xl xl:text-4xl font-bold tracking-wide text-white px-8 sm:px-8 md:px-20 lg:px-4 text-center "
      >
        <span>Log in your account</span>
      </div>
      <form class="flex flex-col text-lg font-medium gap-4 text-customDark3" method="POST" action="https://api.albgott.com/iam/tenants/:check">
        <div class="flex flex-col items-start gap-1">
          <p>Email:</p>
          <input class="px-6 py-2 rounded-full " placeholder="Enter email" name="email" type="email" required/>
        </div>
        <div class="flex flex-col items-start gap-1">
          <p>Workspace:</p>
          <input class="px-6 py-2 rounded-full" placeholder="Enter workspace" name="workspace" required minlength="4"/>
        </div>
        <button class="font-semibold px-6 py-2 rounded-full hover:bg-customDark2 bg-customDark3 text-customAmber2">Continue</button>
      </form>
      <p class="text-white">
        Don't have an account? <a class="hover:text-customDark3" href="/auth/signup"
          >Sign up</a>
      </p>
    </div>
  </div>
  <Footer />
</Layout>